{
  "name": "blueshift-ui",
  "version": "0.0.0",
  "homepage": "https://github.com/varsitytutors/blueshift-ui#readme",
  "engines": {
    "node": ">=18.13.0",
    "yarn": "~1.22"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-typescript": "^7.21.0",
    "@emotion/react": "11.10.5",
    "@emotion/styled": "11.10.5",
    "@fontsource/lato": "^4.5.10",
    "@fontsource/poppins": "^4.5.10",
    "@mui/icons-material": "^5.11.9",
    "@mui/material": "5.11.8",
    "@storybook/addon-a11y": "^6.5.15",
    "@storybook/addon-actions": "^6.5.15",
    "@storybook/addon-essentials": "^6.5.15",
    "@storybook/addon-interactions": "^6.5.15",
    "@storybook/addon-links": "^6.5.15",
    "@storybook/addons": "^6.5.15",
    "@storybook/builder-vite": "^0.3.0",
    "@storybook/react": "^6.5.15",
    "@storybook/theming": "^6.5.15",
    "@swc/core": "^1.3.44",
    "@swc/jest": "^0.2.24",
    "@testing-library/dom": "^9.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.10",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@vanilla-extract/css": "^1.9.5",
    "@vanilla-extract/jest-transform": "^1.1.1",
    "@vanilla-extract/vite-plugin": "^3.8.0",
    "@vitejs/plugin-react-swc": "^3.2.0",
    "babel-loader": "^9.1.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.4.0",
    "eslint-plugin-storybook": "^0.6.3",
    "fetch-mock-jest": "^1.5.1",
    "husky": "^8.0.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "lerna": "^6.5.0",
    "lint-staged": "^13.1.2",
    "npm": "^9.4.2",
    "nx": "^19.4.3",
    "prettier": "^2.8.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "^4.9.4",
    "vite": "^4.1.3",
    "vite-tsconfig-paths": "^4.0.7"
  },
  "scripts": {
    "bootstrap": "lerna clean -y && lerna bootstrap && yarn transpile",
    "build": "lerna run build",
    "build-storybook": "NODE_OPTIONS=--openssl-legacy-provider build-storybook --output-dir ./docs/storybook",
    "bump": "lerna version --exact --no-private",
    "dev": "yarn storybook",
    "eslint": "eslint . --ext .js,.jsx,.ts,.tsx --color",
    "eslint-fix": "yarn eslint --fix",
    "jest": "jest --config=package.json --env=jsdom",
    "lint": "yarn eslint && yarn prettier",
    "lint-fix": "(yarn eslint-fix || true) && yarn prettier-fix",
    "prepare": "husky install",
    "prettier": "prettier --check ./",
    "prettier-fix": "prettier --write ./",
    "setup": "yarn && yarn bootstrap",
    "storybook": "NODE_OPTIONS=--openssl-legacy-provider start-storybook -h www.vt.local -p 6006",
    "test": "yarn lint && yarn jest",
    "transpile": "lerna run transpile",
    "workspace-add": "lerna add --exact"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:storybook/recommended",
      "prettier"
    ],
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true,
        "modules": true
      }
    },
    "plugins": [
      "@typescript-eslint",
      "jsx-a11y",
      "import",
      "react",
      "react-hooks"
    ],
    "rules": {
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "vars": "all",
          "args": "none"
        }
      ],
      "complexity": [
        "error",
        12
      ],
      "import/no-anonymous-default-export": [
        "error",
        {
          "allowArray": false,
          "allowArrowFunction": false,
          "allowAnonymousClass": false,
          "allowAnonymousFunction": false,
          "allowCallExpression": true,
          "allowNew": false,
          "allowLiteral": false,
          "allowObject": false
        }
      ],
      "max-lines": [
        "error",
        {
          "max": 450,
          "skipBlankLines": true,
          "skipComments": true
        }
      ],
      "max-statements": [
        "error",
        50
      ],
      "new-cap": "off",
      "no-case-declarations": "warn",
      "no-console": "off",
      "no-debugger": "warn",
      "no-prototype-builtins": "off",
      "no-underscore-dangle": "off",
      "no-use-before-define": "off",
      "no-useless-constructor": "error",
      "no-useless-return": "error",
      "one-var": [
        "error",
        {
          "var": "never",
          "let": "never",
          "const": "never"
        }
      ],
      "react/jsx-key": "error",
      "react/jsx-no-undef": "warn",
      "react/jsx-sort-props": [
        "error",
        {
          "ignoreCase": true
        }
      ],
      "react/jsx-uses-react": "warn",
      "react/jsx-uses-vars": "warn",
      "react/no-typos": "off",
      "react-hooks/exhaustive-deps": "warn",
      "react-hooks/rules-of-hooks": "error",
      "sort-imports": [
        "error",
        {
          "allowSeparatedGroups": true
        }
      ],
      "strict": "off"
    }
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/**/*.@(t|j)s?(x)",
      "!**/*.css.ts",
      "!**/*.d.ts",
      "!**/*.stories.@(t|j)s?(x)",
      "!**/*.test.@(t|j)s?(x)",
      "!**/node_modules/**",
      "!**/types/**",
      "!report-web-vitals.ts"
    ],
    "coverageDirectory": "docs/coverage",
    "coverageProvider": "v8",
    "coverageThreshold": {
      "global": {
        "functions": 85,
        "statements": 85
      }
    },
    "globalSetup": "./lib/jest/setup/global.ts",
    "moduleDirectories": [
      "./node_modules",
      "./packages"
    ],
    "moduleNameMapper": {
      "\\.(aac|gif|eot|jpg|jpeg|m4a|mp3|mp4|oga|otf|png|svg|ttf|wav|webm|webp|woff|woff2)(\\?url)?$": "<rootDir>/lib/jest/mocks/file.js",
      "\\.(css|less|sass|scss)$": "<rootDir>/lib/jest/mocks/style.js"
    },
    "roots": [
      "packages/"
    ],
    "setupFilesAfterEnv": [
      "./lib/jest/setup/after-env.ts"
    ],
    "testEnvironment": "jsdom",
    "testRegex": "(/src/.*|(\\.|/)).test\\.(j|t)sx?$",
    "transform": {
      "\\.css\\.ts$": "@vanilla-extract/jest-transform",
      "^.+\\.(js|ts|tsx)$": [
        "@swc/jest"
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@blueshift-ui|@mui)/)"
    ]
  },
  "lint-staged": {
    "*.(t|j)s?(x)": [
      "prettier --write",
      "eslint --fix"
    ],
    "packages/**/*.@(t|j)s?(x)": [
      "jest --bail --collectCoverageFrom=collectCoverageFrom: [!**/*.d.ts, !**/*.stories.@(t|j)s?(x), !**/*.test.@(t|j)s?(x), !**/node_modules/**, !**/types/**] --config=package.json --env=jsdom --findRelatedTests --passWithNoTests"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "singleQuote": false
        }
      }
    ]
  },
  "dependencies": {}
}
